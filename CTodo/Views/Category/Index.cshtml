@using Microsoft.IdentityModel.Tokens
@using Ctodo.Models.ViewModel

@model CategoryIndexViewModel

@{
    ViewData["Title"] = "Categories";
}

<div>
    @await Html.PartialAsync("Create", Model.CategoryCreate)
    <h2 class="mt-4 text-center">Categories</h2>
    <div class="mt-3">
        <div class="d-flex justify-content-center">
            <div class="mt-3" style="max-width: 450px; width: 100%">
                @{
                    if (!Model.Categories.IsNullOrEmpty())
                    {
                        foreach (var category in Model.Categories)
                        {
                            <div class="my-2 px-2 py-1 d-flex justify-content-between border border-1 border-secondary rounded">
                                <div>
                                    @category.Name
                                </div>
                                <div>
                                    <form method="post" asp-action="Delete">
                                        <input name="categoryId" value="@category.CategoryId" type="hidden"/>
                                        <button class="btn btn-outline-danger" type="submit">Delete</button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div>
                            <h3 class="text-center">No categories created yet</h3>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>