@using Ctodo.Models.ViewModel;

@model CategoryViewModel

<div class="mt-5 ">
    <h2 class="text-center">Create category</h2>
    <div class="d-flex justify-content-center">
        <form class="mt-2" style="max-width: 450px; width: 100%" asp-controller="Category" asp-action="Create" method="post">
            <div class="my-3">
                <label for="Name" class="form-label">Category name</label>
                <input type="text" class="form-control" id="Name" name="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-3 d-flex justify-content-center">
                <button id="create-category" class="btn btn-outline-success" type="submit">Send</button>
            </div>
        </form>
    </div>
</div>